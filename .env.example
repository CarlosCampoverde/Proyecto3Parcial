# .env.example - Variables de entorno para Railway
# Copia este archivo como .env y configura los valores apropiados

# Entorno
NODE_ENV=production

# Base de datos PostgreSQL (proporcionada automáticamente por Railway)
DATABASE_URL=postgresql://username:password@hostname:port/database

# JWT Secret (OBLIGATORIO)
JWT_SECRET=your-super-secret-jwt-key-here

# Puerto del servidor (configurado automáticamente por Railway)
PORT=3000

# Base URL para APIs frontend
BASE_URL=https://your-app.railway.app

# Debug mode
DEBUG=false

# Para producción usar:
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/gym_web_prod
# JWT_SECRET=secure-random-string-for-production
# PORT=3000 - Variables de entorno de ejemplo
# Copia este archivo como .env y configura los valores apropiados

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/gimnasio_test

# JWT Secret
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# Puerto del servidor
